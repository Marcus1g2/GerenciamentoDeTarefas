@namespace GerenciamentoDeTarefas.Models.Enums
@model Usuario
<h1 class="text-center">Cadrastro</h1>
<div class="row justify-content-center my-4">
    <div class="col-md-4">
        <form asp-action="Cadrastro" method="post">
            <div class="form-group">
                <label asp-for="Nome"> Nome </label>
                <input asp-for="Nome" class="form-control" type="text" />
                <span asp-validation-for="Nome" class="text-black text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"> Email </label>
                <input asp-for="Email" class="form-control" type="email" placeholder="exemplo@outlook.com" />
                <span asp-validation-for="Email" class="text-black text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha"> Senha </label>
                <input asp-for="Senha" class="form-control" type="password" />
                <span asp-validation-for="Senha" class="text-black text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="DataAtual" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Perfil"> Perfil </label>
                <select asp-for="Perfil" class="form-control">
                    <option value="">Selecione um perfil </option>
                    <option value="Administrador"> Administrador </option>
                    <option value="Gerente"> Gerente </option>
                    <option value="Equipe"> Equipe </option>
                </select>
                <span asp-validation-for="Perfil" class="text-black text-danger"></span>
            </div>
            <div>
                <input type="checkbox" class="form-check-input" />
                <label class="form-check-label"> Clique em mim </label>
            </div>
            <br />
            <input type="submit" value="Cadrastro" class="btn btn-primary " />
        </form>
        <div class="form-group">
            <a asp-action="Login" class="btn btn-outline-danger">Voltar</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

