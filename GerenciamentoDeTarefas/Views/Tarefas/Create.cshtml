
@namespace GerenciamentoDeTarefas.Models.Enums
@model Tarefa
<h1 class="text-center">Create</h1>
<div class="row justify-content-center my-4">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name"> Nome </label>
                <input asp-for="Name" class="form-control" type="text" />
                <span asp-validation-for="Name" class="text-black text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comentario"> Comentario </label>
                <input asp-for="Comentario" class="form-control" type="text" />
                <span asp-validation-for="Comentario" class="text-black text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prazo"> Senha </label>
                <input asp-for="Prazo" class="form-control" type="date" />
                <span asp-validation-for="Prazo" class="text-black text-danger"></span>
            </div>
          
            <input type="submit" value="Create" class="btn btn-primary " />
        </form>
        <div class="form-group">
            <a asp-action="Login" class="btn btn-outline-danger">Voltar</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

